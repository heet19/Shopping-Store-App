<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shoppings"
    tools:context=".allappActivity">

    <ImageButton
        android:id="@+id/amazonBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="27dp"
        android:background="#FBFBFB"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/shoppersstopBtn"
        app:layout_constraintEnd_toStartOf="@+id/flipkartBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/amazon"
        tools:visibility="visible" />

    <ImageButton
        android:id="@+id/flipkartBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="27dp"
        android:background="#FBFBFB"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/lakmeBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/amazonBtn"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/flipkart"
        tools:visibility="visible" />

    <ImageButton
        android:id="@+id/shoppersstopBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="28dp"
        android:background="#FBFBFB"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/sugarBtn"
        app:layout_constraintEnd_toStartOf="@+id/lakmeBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amazonBtn"
        app:srcCompat="@drawable/shoppersstop"
        tools:visibility="visible" />

    <ImageButton
        android:id="@+id/lakmeBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="28dp"
        android:background="#FBFBFB"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/nykaaBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/shoppersstopBtn"
        app:layout_constraintTop_toBottomOf="@+id/flipkartBtn"
        app:srcCompat="@drawable/lakme"
        tools:visibility="visible" />

    <ImageButton
        android:id="@+id/nykaaBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="133dp"
        android:background="#FBFBFB"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sugarBtn"
        app:layout_constraintTop_toBottomOf="@+id/lakmeBtn"
        app:srcCompat="@drawable/sugar"
        tools:visibility="visible" />

    <ImageButton
        android:id="@+id/sugarBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="133dp"
        android:background="#FBFBFB"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/nykaaBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shoppersstopBtn"
        app:srcCompat="@drawable/nykaa"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>